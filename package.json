{
  "name": "servor",
  "version": "4.0.4",
  "description": "A dependency free dev server for single page app development",
  "repository": "@mayflower-tech/servor",
  "publishConfig": {
    "@mayflower-tech:registry": "https://npm.pkg.github.com"
  },
  "type": "commonjs",
  "main": "./dist/servor.js",
  "bin": "./dist/cli.js",
  "keywords": [
    "server",
    "https",
    "livereload",
    "spa"
  ],
  "files": [
    "dist/*",
    "servor.ts",
    "cli.ts",
    "utils/*"
  ],
  "scripts": {
    "start": "node dist/cli.js tests/example --reload --browse --static --module",
    "build": "tsc",
    "cleanup": "rm -f servor.key servor.crt",
    "test": "npm run cleanup && cd tests && node index.js"
  },
  "author": "Luke Jackson <lukejacksonn@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/http-proxy": "^1.17.10",
    "@types/node": "^18.14.6",
    "prettier": "^2.8.4",
    "puppeteer": "^3.0.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "http-proxy": "^1.18.1"
  },
  "packageManager": "yarn@3.4.1"
}
